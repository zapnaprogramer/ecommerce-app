{
  "compilerOptions": {
    /* ✅ Modern build target */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* ✅ JavaScript & TypeScript compatibility */
    "allowJs": true,
    "skipLibCheck": true,

    /* ✅ Strong type checking for safer code */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* ✅ Don't output compiled JS files (Next handles this) */
    "noEmit": true,

    /* ✅ Smooth ES module interop */
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* ✅ Helps TypeScript understand Next.js features */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ✅ Custom import paths */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ✅ Add new features from Next.js 15+ */
    "types": ["node", "next"],

    /* ✅ Fix for async searchParams and serverActions typing */
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "verbatimModuleSyntax": true,

    /* ✅ Make sure type declarations are recognized */
    "typeRoots": ["./@types", "./node_modules/@types"]
  },

  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "@types/**/*.d.ts"
  ],

  "exclude": ["node_modules"]
}
